{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client", "bun-types"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

   /* Linting */
"strict": false,
"noUnusedLocals": false,           // Changed from true
"noUnusedParameters": false,       // Changed from true
"noFallthroughCasesInSwitch": false, // Changed from true
"noUncheckedSideEffectImports": false,
"noImplicitAny": false,            // Explicitly disable this
"noImplicitThis": false            // Explicitly disable this
   
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]

}
